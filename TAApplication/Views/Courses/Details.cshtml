@model TAApplication.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

@{
    ViewData["Description"] = "Page where logged in users can view a course's details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SemesterOffered)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SemesterOffered)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearOffered)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearOffered)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProfessorUnid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProfessorUnid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProfessorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProfessorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.StartTime.ToLocalTime().ToString("h:mm tt")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.EndTime.ToLocalTime().ToString("h:mm tt")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DaysOffered)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DaysOffered)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreditHours)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreditHours)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnrollmentCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentCount)
        </dd>
        @*Only admin can see note*@
        @if (User.IsInRole("Admin"))
        { 
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Note)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Note)
            </dd>
        }
    </dl>
</div>

@*Only admin can see ModificationDate and ModifiedBy*@
@if (User.IsInRole("Admin"))
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.ModificationDate)
            </dt>
            <dd class="col-md-10">
                @Model.ModificationDate.ToLocalTime()
            </dd>
            <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </dt>
            <dd class="col-md-10">
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
        </dl>
    </div>
}

@*Only admin can see note*@
@if (User.IsInRole("Admin"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
        <a asp-action="List">Back to List</a>
    </div>
}

@*Professor can see back to list prompt*@
@if (User.IsInRole("Professor"))
{
    <div>
        <a asp-action="List">Back to List</a>
    </div>
}